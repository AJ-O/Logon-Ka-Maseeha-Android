<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="290dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="288dp">

            <ImageView
                android:id="@+id/accepted_item_img"
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="42dp"
                android:layout_marginEnd="246dp"
                app:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/accepted_product_type"
                android:layout_width="136dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="79dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/accepted_item_address"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="81dp"
                android:layout_marginEnd="79dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/accepted_item_mno"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="126dp"
                android:layout_marginEnd="79dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/accepted_item_donated_date"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="184dp"
                android:layout_marginEnd="78dp"
                android:text="TextView" />

            <Button
                android:id="@+id/item_status_btn"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="241dp"
                android:layout_marginEnd="80dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
